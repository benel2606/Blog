<% include ../partials/header%>
<div class="ui main text container">
  <!-- <div class="ui clearing segment"> -->
  <h1 class="ui header">
    <img src="icons/blog.png" alt="" />
    <!-- <i class="medapps icon"></i> -->
    <div class="content">
      Blog Site
      <div class="sub header">Find what interests you!</div>
    </div>
  </h1>
  <!-- </div> -->
  <div class="ui top attached segment">
    <div class="ui divided items">
      <% blogs.forEach(function(blog) { %>
      <div class="item">
        <div class="image"><img src="<%= blog.image %>" /></div>
        <div class="content">
          <a class="header" href="/blogs/<%=blog._id%>">
            <%=blog.title %> </a>
          <div class="meta">
            <span>
              <%=blog.created.toDateString()%> </span>
          </div>
          <div class="description">
            <p>
              <%-blog.body.substring(0,100)%>...</p>
          </div>
          <div class="extra">
            <a class="ui floated basic blue button" href="/blogs/<%=blog._id%>">Read More <i class="right chevron icon"></i></a>
          </div>
        </div>
      </div>
      <% })%>
    </div>
  </div>
</div>
<% include ../partials/footer%>